<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Token Gen</title>
  </head>
  <body>
    <h1>TOKEN generated By Omi</h1>

    <p id="token"><%= token %></p>

    <!-- Add a button to copy the token to clipboard -->
    <button onclick="copyToClipboard()">Copy to Clipboard</button>

    <script>
      function copyToClipboard() {
        // Get the text content of the token element
        var tokenElement = document.getElementById("token");
        var tokenText = tokenElement.innerText;

        // Create a temporary input element and set its value to the token text
        var tempInput = document.createElement("input");
        tempInput.value = tokenText;

        // Append the input element to the document
        document.body.appendChild(tempInput);

        // Select the text in the input element
        tempInput.select();
        tempInput.setSelectionRange(0, 99999); /* For mobile devices */

        // Execute the copy command
        document.execCommand("copy");

        // Remove the temporary input element
        document.body.removeChild(tempInput);

        // Optionally, provide user feedback (you can customize this part)
        alert("Token copied to clipboard!");
      }
    </script>
  </body>
</html>
